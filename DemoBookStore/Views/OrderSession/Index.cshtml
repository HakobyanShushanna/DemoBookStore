@model IEnumerable<DemoBookStore.Models.BookModel>

@{
    ViewData["Title"] = "Index";
    
}

<h1>Index</h1>

<p>
    <a asp-controller="Book" asp-action="Index">Keep Shopping</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                Price for each book
            </th>
            <th>
                Price for Books
            </th>
            <th>
                Count
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @ViewBag.Sums[item.Id]
                </td>
                <td>
                    @ViewBag.Counts[item.Id]
                </td>
                <td>
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@item.Id">Details</a> | 
                    <a asp-action="RemoveFromOrder" asp-route-id="@item.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h3>Total Amount to Pay: @ViewBag.Sum</h3>
<a class="btn btn-primary" asp-controller="Order" asp-action="PlaceOrder">Buy</a>