@model List<CartItem>

<h2>Shopping Cart</h2>

@if (Model.Any())
{
    <table>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@(item.Price * item.Quantity)</td>
                <td>
                    <a href="@Url.Action("RemoveFromCart", new { Id = item.Id })">Remove</a>
                </td>
            </tr>
        }
    </table>
    <a href="@Url.Action("Checkout", "Order")">Checkout</a>
}
else
{
    <p>Your cart is empty.</p>
}
